<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <h2 class="card-header bg-light"><%= @user.name %>さんの会員詳細</h2>
        <div class="card-body">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td>会員ID</td>
                <td><%= @user.id %></td>
              </tr>
              <tr>
                <td>ユーザー名</td>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <td>会員ステータス</td>
                <td>
                  <% if @user.is_deleted %>
                    退会
                  <% else %>
                    <div class="text-success">有効</div>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
          <%= link_to "編集する", edit_admin_user_path, class: "btn btn-success mr-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
