<div class="container">
   <div class="row mt-4">
    <div class="col-10 mx-auto">
      <h2 class="text-center w-25 h4 bg-light">コメント編集</h2>
      <%= render 'layouts/errors', obj: @area_comment %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-10 mx-auto">
      <%= form_with model: @area_comment, url: admin_area_area_comment_path(@area_comment), method: :patch do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td class="col-4">コメント</td>
              <td><%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "form-control col-6" %></td>
            </tr>
            <tr>
              <td><%= f.submit "保存する", class: 'btn btn-success' %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
      <div class="mt-3">
        <%= link_to "削除する", admin_area_area_comment_path(@area_comment), method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>