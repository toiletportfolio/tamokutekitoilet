<div class="container">
  <div class="row mt-4">
    <div class="col-10 mx-auto">
      <div class="mt-3">
        <h4 class="text-center bg-light">コメント詳細</h4>
      </div>
      <table class="table table-bordered mt-3">
        <tbody>
          <tr>
            <td class="table-active text-dark w-50">ユーザー名</td>
            <td class="w-100"><%= @area_comment.user.name %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">メールアドレス</td>
            <td class="w-100"><%= @area_comment.user.email %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">コメント</td>
            <td class="w-100"><%= @area_comment.comment %></td>
          </tr>
        </tbody>
      </table>
      <div class="mt-3">
        <%= link_to "コメント編集", edit_area_comment_path, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>