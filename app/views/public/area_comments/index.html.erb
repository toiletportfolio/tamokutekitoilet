<div class="container">
  <div class="row mt-4">
    <div class="col-10 mx-auto">
      <h2 class="text-center w-25 h4 bg-light">コメント一覧</h2>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-10 mx-auto">
      <table class="table table-bordered">
        <tbody>
          <% @area_comments.each do |area_comment| %>
          <tr>
            <td><%= area_comment.area.area_name %></td>
            <td><%= area_comment.area.address %></td>
            <td><%= area_comment.comment %></td>
            <td><%= link_to "詳細", area_path(area_comment.area), class: 'btn btn-success' %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @area_comments %>
      </div>
    </div>
  </div>
</div>