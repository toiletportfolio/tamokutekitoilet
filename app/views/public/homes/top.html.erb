<div class="container">
  <div class="row mt-4">
    <div class="col-10 mx-auto">
      <h2 class="text-center w-25 h4 bg-light">トップ</h2>
    </div>
  </div>

  <div class="row mt-5">
      <div class="col-4 mx-auto">
        <div class="search_form border p-2">
          <p>住所検索</p>
          <%= form_with url: search_path, local: true, method: :get do |f| %>
            <%= f.text_field :search %>
            <%= f.submit "検索", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

      <div class="col-6 mx-auto">
        <div id="jmap"></div>
      </div>
  </div>
</div>