<div class="container">
  <div class="col-md-8 mx-auto">
    <h3 class="h4 text-center w-25 bg-light">新規会員登録</h3>
  </div>

  <div class="row mt-5">
    <div class="col-md-10 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :name, 'ユーザー名', class: "col-form-label" %></td>
              <td>
                <%= f.text_field :name, class: "form-control col-10 ml-auto" %>
              </td>
            </tr>

            <tr>
              <td><%= f.label :email, 'メールアドレス', class: "col-form-label" %></td>
              <td>
                <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control col-10 ml-auto" %>
              </td>
            </tr>

            <tr>
              <td><%= f.label :password, 'パスワード', class: "col-form-label"%>
                <% if @minimum_password_length %>
                  <em class="d-inline-block", style="height: 38px; line-height: 38px;">(<%= @minimum_password_length %>文字以上)</em>
                <% end %>
              </td>
              <td>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-10 ml-auto" %>
              </td>
            </tr>

            <tr>
              <td><%= f.label :password_confirmation, 'パスワード(確認用)', class: "col-form-label" %></td>
              <td>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-10 ml-auto" %>
              </td>
            </tr>

            <tr>
              <td></td>
              <td><%= f.submit "新規登録", class: "btn btn-success col-10 w-25 d-block", style:"margin-left: 110px;" %></td>
            </tr>

          </tbody>
        </table>
      <% end %>
    </div>
  </div>

  <div class="col-md-8 mx-auto mt-5">
    <h3 class="mt-3 bg-light h4 text-center w-50">既に登録済みの方</h3>
    <p class="mx-5 mt-4"><%= render "public/shared/links" %>からログインしてください</p>
  </div>
</div>