<div class='container'>
  <div class='row mt-3'>
    <div class='col-10 mx-auto'>
      <h2 class="text-center w-25 h4 bg-light d-inline-block">会員情報編集</h2>
      <%= render 'layouts/errors', obj: @user %>
    </div>
  </div>

  <div class="row">
    <div class='col-10 mt-3'>

      <%= form_with model: @user, url: users_mypage_path(@user), method: :patch do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>ユーザー名</td>
              <td><%= f.text_field :name, class:"form-control col-4" %></td>
            </tr>
            <tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email, class: "form-control col-4" %></td>
            </tr>
          </tbody>
        </table>
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        <%= link_to "退会する", users_unsubscribe_path, class: 'btn btn-danger ml-3' %>
      <% end %>
    </div>
  </div>
</div>